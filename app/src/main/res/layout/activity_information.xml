<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@drawable/background1"
        android:orientation="vertical"
        android:layout_marginBottom="2dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start|center"
        android:text="Information Section"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:text="The information section aims to help inform you on everything you need to know when transitioning to a Plant-Based diet"
        android:textColor="#FFFFFF" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/assessment"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/assessmentImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/assesment" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/assessmentTitle"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" Assessment"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="241dp"
                android:layout_height="88dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assessmentDesc"
                    android:layout_width="241dp"
                    android:layout_height="79dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:padding="10sp"
                    android:text="Information on underlying conditions and the necessary percautions you must take"
                    android:textSize="14dp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/foodGroups"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/foodgroupsImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/foodgroups" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/foodGroupstitle"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" Food Groups"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="264dp"
                android:layout_height="102dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/foodGroupstDesc"
                    android:layout_width="265dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:padding="10sp"
                    android:text="New Food-Groups that are important to incorporate into our diet"
                    android:textSize="14dp" />

            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/nutrients"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/nutrientsImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nutrients" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nutrientstitle"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" Nutrients"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="79dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nutDesc"
                    android:layout_width="265dp"
                    android:layout_height="79dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:padding="10sp"
                    android:text="List of nutrients you must ne cautious of as their main sources are derived from animal produce"
                    android:textSize="14dp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/tips"
        android:layout_margin="10dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/tipsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tips" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tipstitle"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/tips_tricks1"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="265dp"
                android:layout_height="79dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipsDesc"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:padding="10sp"
                    android:text="@string/tips_tricks_when_that_every_person_should_know_to_make_thier_transition_an_easier_process"
                    android:textSize="14dp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>